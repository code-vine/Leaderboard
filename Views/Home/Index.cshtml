@model List<Leaderboard.Models.LeaderboardEntry>

<div class="container mt-5">
    <h2 class="text-center mb-4">🏆 Top 10 Leaderboard</h2>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>Score</th>
                <th>Date Achieved</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Username</td>
                    <td>@Model[i].Score</td>
                    <td>@Model[i].DateAchieved.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>